extends ../../templates/forusers/layoutuser

block content
  .total-content
    .grandcontent
      for notacion in notes
        .imagen-test.container
          .col-lg-8.col-md-8.col-sm-8
              h2= notacion.title
          .editing.col-lg-2.col-md-2.col-sm-2
            a(href='/app/textnote/#{notacion._id}/edit') Editar
          
          .col-lg-2.col-md-2.col-sm-2
            form(action='/app/textnote/#{notacion._id}?_method=DELETE', method='POST')
              input(type='submit', value='Eliminar')