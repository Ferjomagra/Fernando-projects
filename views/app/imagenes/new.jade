extends ../../templates/forusers/layoutuser

block content
  .total-content
    .grandcontent
      .container-img.col-lg-12.col-md-12.col-sm-12.col-xs-12

        a.img(href='/app/imagenes') Ver mis imagenes

        h2 Agregar nueva imagen
        form.imgnew(action='/app/imagenes', method='POST', enctype='multipart/form-data')

          label(for='title') Agrega tu imagen
          input(type='text', name='title', placeholder='Agrega tu imagen', id='addimg', autocomplete='off')


          label(for='archivo') Imagen
          input(type='file', name='archivo', id='archivo')

          
          input(type='submit', value='Agregar imagen')


